//create package and make a class
package innerclass;
abstract class factorial{
	int result=1;
	public int fact(int n) 
	{
		for(int i=n;i>0;i--)
		{result=result*i;}
		return result;
	}
}
public class Abc extends factorial {
public void disp(int x) {
	System.out.println(" factorial is  " +x);
}
public static void main(String[] args )
{
	Abc a=new Abc();
	a.fact(5);
	}
}

//create another class and import the package and use the package classes

import innerclass.*;

public class xyz extends Abc{

	public static void main(String[] args) {

		xyz a=new xyz();
		int r=a.fact(6);
		a.disp(r);
	     

	}

}
